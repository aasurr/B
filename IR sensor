IR sensor

#define IR_SENSOR_PIN 7    // IR sensor output pin
#define LED_PIN 6      // LED pin (built-in LED on Arduino)

void setup() {
  pinMode(IR_SENSOR_PIN, INPUT);  // Set sensor pin as input
  pinMode(LED_PIN, OUTPUT);       // Set LED pin as output
  Serial.begin(9600);
  Serial.println("IR Object Detection Test");
}

void loop() {
  int sensorState = digitalRead(IR_SENSOR_PIN); // Read the sensor output

  if (sensorState == LOW) { // LOW means object detected (for most IR modules)
    digitalWrite(LED_PIN, HIGH);  // Turn on LED
    Serial.println("Object Detected!");
  } else {
    digitalWrite(LED_PIN, LOW);   // Turn off LED
    Serial.println("No Object");
  }

  delay(300); // Small delay to stabilize readings
}
